#!/bin/bash

# Check if the PYCODE environment variable is set
if [ -z "$PYCODE" ]; then
  echo "Error: PYCODE environment variable is not set."
  exit 1
fi

# Create a temporary Python file
TMP_PY_FILE=$(mktemp /tmp/temporary_python_script.XXXXXX.py)
echo "$PYCODE" > "$TMP_PY_FILE"

# Run the Python script
python3 "$TMP_PY_FILE"

# Clean up the temporary Python file
rm "$TMP_PY_FILE"
